package application;

public class Sqlquery {
	
	public static String newKunde(int id, String Nachname, String Vorname, String Straﬂe, int Nummer, int PLZ, String Ort) {
		String sqlquery=null;
		sqlquery=("INSERT INTO t_kunden (pk_id, Nachname, Vorname, Straﬂe, Nummer, PLZ, Ort) VALUES ('"+id+"', '"+Nachname+"', '"+Vorname+"', '"+Straﬂe+"', '"+Nummer+"', '"+PLZ+"', '"+Ort+"');");
		return sqlquery;
	}
	public static String delKunde(int id) {
		String sqlquery=null;
		sqlquery=("DELETE FROM t_kunden WHERE pk_id="+id);
		return sqlquery;
	}
	public static String getKunden() {
		String sqlquery=null;
		sqlquery=("SELECT * FROM t_kunden");
		return sqlquery;
	}
	
}
