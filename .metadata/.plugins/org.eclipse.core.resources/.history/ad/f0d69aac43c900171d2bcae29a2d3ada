package application;

import java.util.Scanner;

public class IO_Menu_objverw {
	static Scanner sc = new Scanner(System.in);
//====Neues Objekt====	
	public static void neuobj(String flugzeug[][]) {
		//Eingaben
		System.out.println("\n----------Neues Flugzeug hinzufügen-----------");                                            //--Eingabe Beginn
	    System.out.print("\nGeben Sie das Flugzeugmodell ein: ");
	    String modell=sc.nextLine();
	    System.out.print("\nGeben Sie die Sitzplätze des Flugzeugs ein: ");
	    int sitze=sc.nextInt();
	    System.out.println("\nGeben Sie die Nummer des Flugzeugs ein:");
	    System.out.println("Achtung wenn die Nummer bereits vergeben ist wird diese überschrieben!");
	    int id=sc.nextInt();
	    
	    //Überprüfung ob ID zulässig
	    int i=0;
	    while (i==0) { //läuft bis zulässige ID gewählt wurde
	    	if ((id<24) && (id>0)) i=1;
	    	else {
	    		System.out.println("Es können maximal 24 Objekte verwaltet werden geben Sie eine Zahl von 1-24 ein:");
	            id = sc.nextInt();
	            i=0;  
	    	}//end of else
	    }//end of while
	   
	    //Flugzeug Objekt erstellen
	    flugzeug=Mietobjekte.eintrag(id, modell, flugzeug, sitze);
	   
	    //Ausgabe Check
	    System.out.println("\nSie haben folgendes Flugzeug hinzugefügt:");                                                     //--Ausgabe Beginn
	    System.out.println("Flugzeugnummer: "+id);
	    System.out.println("Modell: "+flugzeug[id][0]);
	    System.out.println("Sitzplätze: "+flugzeug[id][1]); 
	    IO_MainMenu.fortfahren();
	}//end of method neuobj
	
//====Objekt löschen	
	public static void delobj(String flugzeug[][]) {
		System.out.println("\n----------Flugzeug entfernen-----------");                                            //--Eingabe Beginn
	    System.out.print("\nGeben Sie die Nummer des Flugzeugs ein: ");	
	    int id=sc.nextInt();
	    System.out.println("\nSie löschen folgendes Flugzeug:");
	    System.out.println("Flugzeugnummer: "+ id );
	    System.out.println("Modell: "+ flugzeug[id][0]);
	    System.out.println("Sitzplätze: "+ flugzeug[id][1]);
	    int i=0;
	    while (i==0) {
	    	System.out.println("Löschen bestätigen (Y/N)");
	    	char del=sc.next().toLowerCase().charAt(0);
	    	switch (del) {
	    	case 'y' :
	    		i=1;
	    		flugzeug=Mietobjekte.loeschen(flugzeug, id);
	    		System.out.println("Erfolgreich gelöscht");
	    		break;
	    	case 'n' :
	    		i=1;
	    		System.out.println("Löschen beendet");
	    		break;
	    	default:
	    		i=0;
	    	}
	    }
	    IO_MainMenu.fortfahren();
	}

}//end of class Objektverwaltung
