package application;

public class Sqlquery {
	
	public static String newKunde(String Nachname, String Vorname, String Straﬂe, int Nummer, int PLZ, String Ort) {
		String sqlquery=null;
		sqlquery=("INSERT INTO t_kunden (Nachname, Vorname, Straﬂe, Nummer, PLZ, Ort) VALUES ('"+Nachname+"', '"+Vorname+"', '"+Straﬂe+"', '"+Nummer+"', '"+PLZ+"', '"+Ort+"');");
		return sqlquery;
	}
	public static String getKuID() {
		String sqlquery=null;
		sqlquery=("SELECT pk_ID FROM t_kunden ORDER BY pk_ID DESC LIMIT 1");
		return sqlquery;
	}
	
}
